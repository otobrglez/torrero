global
        daemon
        maxconn 1024

defaults
        mode http
        timeout connect 5000ms
        timeout client 50000ms
        timeout server 50000ms

frontend rotatingproxies
        bind *:3128
        default_backend tors
        option http_proxy

backend tors
        option http_proxy

        <% TORRERO_CONFIG["tors"].each do |t, options| %>
        server <%= t %> localhost:<%= 3000+(t.split("-").last.to_i) %>
        <% end %>

        balance roundrobin
